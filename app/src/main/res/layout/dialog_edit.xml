<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="300dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp"
            android:layout_marginEnd="32dp" android:layout_marginTop="32dp" android:layout_marginStart="32dp">

        <TextView
                android:text="게시글 제목"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tv_des_title"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp" android:layout_marginTop="16dp"/>
        <TextView
                android:text="게시글 내용"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tv_des_content"
                app:layout_constraintStart_toStartOf="@+id/et_title"
                app:layout_constraintTop_toBottomOf="@+id/et_title" android:layout_marginTop="16dp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:singleLine="true"
                android:maxLines="1"
                android:id="@+id/et_title"
                app:layout_constraintStart_toStartOf="@+id/tv_des_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_des_title" android:layout_marginTop="8dp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:singleLine="true"
                android:maxLines="1"
                android:id="@+id/et_content"
                app:layout_constraintStart_toStartOf="@+id/tv_des_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_des_content"/>
        <Button
                android:text="확인"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/btn_ok"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
                android:textColor="#fff"
                android:background="#0347B8"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>